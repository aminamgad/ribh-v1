# قاعدة البيانات
MONGODB_URI=mongodb://localhost:27017/ribh-ecommerce

# JWT السر
JWT_SECRET=ribh-super-secret-jwt-key-change-in-production-2024

# Cloudinary (لرفع الصور)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# الموقع الأساسي
NEXT_PUBLIC_APP_URL=http://localhost:3000

# بيئة التطوير
NODE_ENV=development

# إعدادات المنصة
PLATFORM_NAME=ربح
PLATFORM_CURRENCY=₪
MIN_WITHDRAWAL_AMOUNT=100

# إعدادات البريد الإلكتروني (اختياري)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@ribh.com

# إعدادات الدفع (اختياري)
PAYMENT_PROVIDER=cod
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# إعدادات الشحن (اختياري)
SHIPPING_PROVIDER=manual
ARAMEX_API_KEY=your-aramex-api-key
ARAMEX_USERNAME=your-aramex-username
ARAMEX_PASSWORD=your-aramex-password

# إعدادات الأمان
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=7d
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=15m

# إعدادات التحليلات (اختياري)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# إعدادات التكامل (اختياري)
EASYORDERS_API_URL=https://api.easyorders.com
EASYORDERS_API_KEY=your-easyorders-api-key
YOUCAN_API_URL=https://api.youcan.shop
YOUCAN_API_KEY=your-youcan-api-key

# إعدادات التطوير
NEXT_PUBLIC_DEBUG=false
LOG_LEVEL=info 